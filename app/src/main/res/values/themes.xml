<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/nanumGothic</item>
    </style>

    <!-- font  start -->
    <style name="nanumGothic" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nanum_gothic</item>
    </style>

    <style name="nanumGothicBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nanum_gothic_bold</item>
    </style>

    <style name="nanumGothicExtraBold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nanum_gothic_extra_bold</item>
    </style>

    <style name="nanumGothicLight" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/nanum_gothic_light</item>
    </style>
    <!--    font end-->


    <!--   tab start-->
    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--   tab end-->
</resources>